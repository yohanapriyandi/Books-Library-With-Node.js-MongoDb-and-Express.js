extends layout

block content

 h1= title

    form(action='', method='POST')
        div.form-group
            label(for='first_name' class='labelku') First Name
            input#first_name.form-control(type='text' placeholder='Your Firstname' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
            label(for='family_name' class='labelku') Lasts Name
            input#family_name.form-control(type='text' placeholder='Your Lastname' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))
        div.form-group
            label(for='date_of_birth' class='labelku') Date of birth
            input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth) )
            label(for='date_of_death' class='labelku') Date of death
            input#date_of_death.form-control(type='date' name='date_of_death' value=(undefined===author ? '' : author.date_of_death) )
        button.btn.btn-primary(type='submit') Submit
    if errors
     ul
      for error in errors
        li!= error.msg